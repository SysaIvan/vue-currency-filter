{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"strictNullChecks": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
			"typePatches",
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
			],
			"@lib/*": [
        "src/lib/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/lib/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
